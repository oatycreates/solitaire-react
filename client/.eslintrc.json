{
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true,
    "jquery": true
  },
  "plugins": ["compat"],
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "extends": [
    "react-app",
    "eslint:recommended"
  ],
  "settings": {
    "targets": ["chrome >= 49", "firefox >= 43", "edge", "safari >= 9", "ie >= 10"],
    "polyfills": ["fetch", "Promise", "assign"],
    "coverage": true,
    "compiler": "babel"
  },
  "rules": {
    "compat/compat": 2
  }
}
